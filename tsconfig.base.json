{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "paths": {
      "@newrelic/browser-agent-core/src/*": [
        "packages/browser-agent-core/src/*"
      ],
      "@newrelic/browser-agent-custom/src/*": [
        "packages/browser-agent-custom/src/*"
      ],
      "@newrelic/browser-agent-microfrontend/src/*": [
        "packages/browser-agent-microfrontend/src/*"
      ],
      "@newrelic/browser-agent/src/*": [
        "packages/browser-agent/src/*"
      ],
      "@newrelic-testing/server": ["test-packages/server/src/index.js"]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
