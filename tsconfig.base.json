{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": false,
    "paths": {
      "@newrelic/browser-agent-core/src/*": [
        "packages/browser-agent-core/src/*"
      ],
      "@newrelic/browser-agent-custom/*": [
        "packages/browser-agent-custom/*"
      ],
      "@newrelic/browser-agent-microfrontend/*": [
        "packages/browser-agent-microfrontend/*"
      ],
      "@newrelic/browser-agent/*": [
        "packages/browser-agent/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
