{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2015", "dom"],
    "strict": true,
    "noImplicitAny": false,
    "paths": {
      "@newrelic/browser-agent": ["packages/browser-agent/index.js"],
      "@newrelic/browser-agent-core/src/*": ["packages/browser-agent-core/src/*"],
      "@newrelic/browser-agent-loader-utils/src/*": ["packages/browser-agent-loader/src/*"],
      "@newrelic/browser-agent-custom": ["packages/browser-agent-custom/index.js"],
      "@newrelic/browser-agent-microfrontend": ["packages/browser-agent-microfrontend/index.js"],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
